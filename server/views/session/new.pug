extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session') method='post')
    +input(signInForm, 'email', t('views.placeholders.email'), errors)(type='text' placeholder='mail@example.ru')
    +input(signInForm, 'password', t('views.placeholders.password'))(type='password' placeholder='password')
    +submit(signInForm)(value=t('views.session.new.submit'))

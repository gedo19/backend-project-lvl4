extends ../layouts/application.pug

block header
  = t('layouts.application.createTask')

block content
  +formFor()(action=route('postTask') method='post').mb-3
    +input(task, 'name', t('views.tasks.name'), errors)
    +textarea(task, 'description', t('views.tasks.description'), errors)
    +select(taskStatuses, 'statusId', t('views.tasks.status'))
    +select(users, 'creatorId', t('views.tasks.creator'))
    +select(users, 'executorId', t('views.tasks.executor'))
    +submit(task)(value=t('views.tasks.new.submit'))

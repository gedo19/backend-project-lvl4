extends ../layouts/application.pug

block header
  = t('layouts.application.tasks')

block content
  a(href=route('newTask')).btn.btn-primary= t('views.tasks.new.create')
  table.table.table-borderless.table-striped.mt-5.bg-white
    thead
      tr
        th= t('views.tasks.id')
        th= t('views.tasks.name')
        th= t('views.tasks.status')
        th= t('views.tasks.creator')
        th= t('views.tasks.executor')
        th= t('views.tasks.createdAt')
        if isAuthenticated()
          th= t('views.tasks.options')
    tbody
      each task in tasks
        tr
          td= task.id
          td= task.name
          td= task.status.name
          td= task.creator.name
          td= task.executor.name
          td= formatDate(task.createdAt)
          if isAuthenticated()
            td
              .d-flex.flex-wrap
                a(href=route('editTask', {id: task.id})).btn.btn-outline-primary.me-1= t('views.tasks.edit.submit')
                +formFor()(action=route(`deleteTask`, {id: task.id}) method='post')
                  input(name="_method" type="hidden" value="DELETE")
                  input(type='submit' value= t('views.tasks.delete.submit')).btn.btn-outline-danger

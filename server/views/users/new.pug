extends ../layouts/application.pug

block content
  .form-signin
    h1.h3.mb-3.fw-normal= t('views.users.new.signUp')
    +formFor()(action=route('users#create') method='post')
      +input(user, 'firstName', t('views.placeholders.firstName'), errors)(type='text')
      +input(user, 'lastName', t('views.placeholders.lastName'), errors)(type='text')
      +input(user, 'email', t('views.placeholders.email'),  errors)(type='text')
      +input(user, 'password', t('views.placeholders.password'), errors)(type='password')
      +submit(user)(value=t('views.users.new.submit'))
